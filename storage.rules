rules_version = '2';

service firebase.storage {
  function isSignedIn() {
    return request.auth != null;
  }
  function isAdmin() {
    return isSignedIn() && request.auth.token.role == 'admin';
  }

  match /b/{bucket}/o {
    match /books/{bookId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
