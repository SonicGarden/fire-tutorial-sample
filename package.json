{
  "name": "fire-tutorial-sample",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "env-cmd -f .env.default next dev",
    "build": "env-cmd -f .env.default next build",
    "start": "env-cmd -f .env.default next start",
    "lint": "next lint && stylelint 'src/**/*.css'",
    "lint:fix": "next lint --fix && stylelint 'src/**/*.css' --fix",
    "format": "prettier --write .",
    "deploy": "rm -rf .firebase && yarn build && yarn rewrites:generate && firebase deploy --except functions --project default",
    "deploy:rules": "firebase deploy --only firestore:rules,storage --project default",
    "rewrites:generate": "next-csr-rewrites-generate --format firebase && yarn format",
    "update:shared": "rm -rf .next && yarn build:shared && yarn update:shared:hosting && yarn update:shared:functions",
    "build:shared": "cd functions/packages/shared && yarn build",
    "update:shared:hosting": "yarn add file:functions/packages/shared",
    "update:shared:functions": "cd functions && yarn add file:packages/shared",
    "preinstall": "cd functions/packages/shared && yarn install && yarn build",
    "ts-node": "env-cmd -f .env.default ts-node"
  },
  "dependencies": {
    "@local/shared": "file:functions/packages/shared",
    "@mantine/core": "^7.1.2",
    "@mantine/dropzone": "^7.1.2",
    "@mantine/form": "^7.1.2",
    "@mantine/hooks": "^7.1.2",
    "@mantine/modals": "^7.1.2",
    "@mantine/notifications": "^7.1.2",
    "@tabler/icons-react": "^2.38.0",
    "firebase": "^10.4.0",
    "next": "latest",
    "react": "latest",
    "react-dom": "latest",
    "react-firebase-hooks": "^5.1.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@sonicgarden/next-csr-rewrites-generator": "^1.2.0",
    "@types/node": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "autoprefixer": "latest",
    "commander": "^11.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "latest",
    "eslint-config-next": "latest",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "firebase-admin": "^11.11.0",
    "plop": "^4.0.0",
    "postcss": "^8.4.31",
    "postcss-preset-mantine": "^1.7.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.3",
    "tailwindcss": "latest",
    "ts-node": "^10.9.1",
    "typescript": "latest",
    "yesno": "^0.4.0"
  }
}
