rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isLoggedIn() {
      return request.auth != null;
    }
    function isOwn(uid) {
      return isLoggedIn() && request.auth.uid == uid;
    }

    match /users/{uid} {
      allow get: if isOwn(uid);
    }
  }
}
